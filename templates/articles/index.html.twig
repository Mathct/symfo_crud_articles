{% extends 'base.html.twig' %}

{% block body %}

<h1>La liste des articles</h1>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div>{{message}}</div>
    {% endfor %}
{% endfor %}

<a href="{{path('article_new')}}">Ajouter un article</a>

{% for article in articles %}
    <section>
    {{ article.type.name }}
        <h2>{{article.title}}</h2>
        <p>Status: {{article.status}}</p>
        <span>Date de cr√©ation: {{ article.createdAt|date('d/m/Y H:i') }}</span>
        <span>Date de modification :
        {% if article.updatedAt %}
            {{ article.updatedAt|date('d/m/Y H:i') }}
        {% else %}
            aucune
        {% endif %}
        </span>
        <a href="{{ path('article', { id: article.id }) }}">
            <button>Lire</button>
        </a>
    </section>
{% endfor %}

{% endblock %}
